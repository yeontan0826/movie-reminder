default_platform(:ios)

platform :ios do
  # before_all do
  #   if FastlaneCore::Helper.is_ci?
  #     setup_ci() # Use temporal keychain on CI
  #   end

  #   app_store_connect_api_key(
  #     key_id: "key_id",
